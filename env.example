# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/tedlist
# MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/tedlist

# Authentication
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=7d

# Google Cloud Vision API (optional, can use either this or service account)
GOOGLE_CLOUD_VISION_API_KEY=your_google_cloud_vision_api_key_here

# Google Cloud Vision API Service Account (optional, can use either this or API key)
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/service-account-file.json

# OpenAI API (for Vision AI image analysis)
OPENAI_API_KEY=your_openai_api_key_here

# AWS S3 Configuration (for image uploads)
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1
AWS_BUCKET_NAME=your-bucket-name

# Logging
LOG_LEVEL=info 